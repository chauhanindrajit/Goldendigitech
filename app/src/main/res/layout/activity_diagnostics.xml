<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Diagnostics">
    <ScrollView
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                android:translationZ="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    >
                    <ImageView
                        android:transitionName="diagnostic_image"
                        android:background="@drawable/pathology_labs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                 <LinearLayout
                     android:background="#9f03303a"
                     android:layout_alignParentBottom="true"
                     android:layout_width="match_parent"
                     android:layout_height="50dp">
                     <TextView
                         android:layout_marginLeft="30dp"
                         android:textSize="25dp"
                         android:gravity="center_vertical"
                         android:textStyle="bold"
                         android:textColor="#fff"
                         android:text="Aspira Diagnostics"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent" />
                 </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="30dp"
                        android:paddingRight="15dp">

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:src="@drawable/ic_place_blue_24dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:text="Shop Number 22, Jangid Home CHS, Jangid Complex Road, Landmark: Near Jangid Estate and Opposite Hetal Park,Mumbai" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingLeft="30dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ic_access_time_blue_24dp"
                            android:layout_width="23dp"
                            android:layout_height="23dp" />
                        <TextView

                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:text="Open Today"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ic_folder_blue_24dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView

                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:text="Services Available : X-Rays, CT Scan, MRI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/flask1"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:text="Sample Checks Of : Blood, Urine, Stool"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ic_access_time_blue_24dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:text=" Sample collection at home done between : 11 am - 6 pm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/paw_print"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView

                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:text="Pets : Dog, Cat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>








        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_collection"
        android:textColor="#FFF"
        android:text="SAMPLE COLLECTION"
        android:translationZ="8dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"/>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:translationZ="16dp"
        android:elevation="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

</RelativeLayout>