<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context="dotcom.com.sam.fragments.ProdiuctDetailsFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:translationZ="6dp"

                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">
                    <ImageView
                        android:transitionName="productimage"
                        android:src="@drawable/prod1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"></ImageView>
                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        android:translationZ="6dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:text="ROYAL CANIN GAIN PUPPY 15 KG "
                                android:maxLines="2"
                                android:textSize="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="13dp"
                                    android:layout_weight="1"
                                    android:text="Manufacturer: Canin    "
                                    android:textColor="@color/textcolor"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:src="@mipmap/ic_heart_non_selected"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp" />

                            </LinearLayout>
                            <TextView

                                android:textStyle="bold"
                                android:text="BUY PACK OF 6 AND GET UP TO 10% "
                                android:textColor="@color/textcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="22dp"
                                    android:text="Rs.450.00"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView

                                    android:textSize="15dp"
                                    android:text="Rs.500"
                                    android:layout_marginLeft="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginBottom="20dp"
                        android:translationZ="6dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">
                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:textSize="13dp"
                                android:text="Pack :"
                                android:textColor="@color/textcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RadioGroup
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RadioButton
                                        android:layout_marginRight="15dp"
                                        android:text="3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <RadioButton
                                        android:layout_marginRight="15dp"
                                        android:text="4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                    <RadioButton
                                        android:layout_marginRight="15dp"
                                        android:text="5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                    <RadioButton
                                        android:layout_marginRight="15dp"
                                        android:text="6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                    <RadioButton
                                        android:layout_marginRight="15dp"
                                        android:text="7"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </RadioGroup>
                            </HorizontalScrollView>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/petdetails_layout"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        android:translationZ="6dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:text="ROYAL CANIN GAIN PUPPY 15 KG "
                                android:maxLines="2"
                                android:textSize="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="13dp"
                                    android:layout_weight="1"
                                    android:text="Manufacturer: Canin    "
                                    android:textColor="@color/textcolor"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:src="@mipmap/ic_heart_non_selected"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp" />

                            </LinearLayout>
                            <TextView

                                android:textStyle="bold"
                                android:text="BUY PACK OF 6 AND GET UP TO 10% "
                                android:textColor="@color/textcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="22dp"
                                    android:text="Rs.450.00"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView

                                    android:textSize="15dp"
                                    android:text="Rs.500"
                                    android:layout_marginLeft="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginBottom="20dp"
                        android:translationZ="6dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">
                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:textSize="13dp"
                                android:text="Pack :"
                                android:textColor="@color/textcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RadioGroup
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RadioButton
                                        android:layout_marginRight="15dp"
                                        android:text="3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <RadioButton
                                        android:layout_marginRight="15dp"
                                        android:text="4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                    <RadioButton
                                        android:layout_marginRight="15dp"
                                        android:text="5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                    <RadioButton
                                        android:layout_marginRight="15dp"
                                        android:text="6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                    <RadioButton
                                        android:layout_marginRight="15dp"
                                        android:text="7"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </RadioGroup>
                            </HorizontalScrollView>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:translationZ="8dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <LinearLayout
                android:clickable="true"
                android:background="@drawable/ripple_gray"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:textSize="18dp"
                    android:text="ADD TO CART"
                    android:gravity="center"
                    android:background="#f7f2f2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:background="@drawable/ripple_gray"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:textSize="18dp"
                    android:textColor="#fff"
                    android:text="BUY NOIW"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>



</FrameLayout>
