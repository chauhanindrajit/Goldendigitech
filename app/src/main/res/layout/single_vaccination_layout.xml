<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:elevation="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/profile_image"
                    android:transitionName="img_profile"
                   android:padding="2dp"
                    android:src="@drawable/profilepicture_default"
                    android:background="@drawable/categeory_shpe"
                    android:layout_width="90dp"
                    android:layout_height="100dp" />
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:minLines="1"
                        android:maxLines="1"
                        android:id="@+id/doctorname"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="Dr. Krishna Ingole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:minLines="1"
                        android:maxLines="1"
                        android:id="@+id/doctorqualification"
                        android:textSize="15dp"
                        android:text="B.V.sc and A.H,M.V.SC-Medicine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:minLines="1"
                        android:maxLines="1"
                        android:textSize="15dp"
                        android:text="17 years experiance"
                        android:id="@+id/doctorexperiance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:id="@+id/visit_at_home_layout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/rupee_icon_blue"
                            android:layout_width="15dp"
                            android:id="@+id/rupessimages"
                            android:layout_height="15dp" />
                        <TextView
                            android:id="@+id/docthomefees"
                            android:textColor="#dc3e3e"
                            android:textStyle="bold"
                            android:minLines="1"
                            android:maxLines="1"
                            android:textSize="15dp"
                            android:text="600 - Visit At Home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_access_time_black_24dp"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#2b2929"
                    android:textSize="12dp"
                    android:id="@+id/availabletime"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Open : Mon-Fri (10am - 6pm) Closed:Sat-Sun"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


        </LinearLayout>


