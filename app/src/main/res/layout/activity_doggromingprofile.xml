<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity.Doggromingprofile">
    <ScrollView
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                android:translationZ="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    >
                    <ImageView
                        android:transitionName="diagnostic_image"
                        android:background="@drawable/pathology_labs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                 <LinearLayout
                     android:background="#9f03303a"
                     android:layout_alignParentBottom="true"
                     android:layout_width="match_parent"
                     android:layout_height="50dp">
                     <TextView
                         android:id="@+id/subcentername"
                         android:layout_marginLeft="30dp"
                         android:textSize="25dp"
                         android:gravity="center_vertical"
                         android:textStyle="bold"
                         android:textColor="#fff"
                         android:text="Aspira Diagnostics"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent" />
                 </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingTop="5dp"

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="1"
                            android:text="Our Packages"
                            android:gravity="center"
                            android:textColor="#c8000000"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/cubeblack"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
android:id="@+id/ssericess"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:textSize="15dp"
                            android:text="Basic Grooming"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Haily breeds :"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/ssamtype"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:text="Sample Checks Of : Blood,"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Less hairy breeds :"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:text="Sample Checks Of"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Size :"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView

                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:text="Sample Checks Of : Blood,"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Services includes :"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:text="Sample Checks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:paddingRight="15dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RadioGroup
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <RadioButton
                            android:textSize="11dp"
                            android:text="Salon Price :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:text="$1500"
                            android:textColor="#efde3131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:text="Salon Price :"
                            android:textSize="11dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:text="$500"
                            android:textColor="#efde3131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        </RadioGroup>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:paddingRight="15dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/btn_bookpackage"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorPrimary"
                            android:text="Book package"
                            android:textColor="#FFF"
                            android:textSize="10dp"
                            android:translationZ="8dp" />
                    </LinearLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>








        </LinearLayout>
    </ScrollView>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:translationZ="16dp"
        android:elevation="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.Theme.AppCompat.Light.DarkActionBar"
        app:navigationIcon="@drawable/ic_arrow_back_whitw_24dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

</RelativeLayout>