<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adoption">


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_adopt_pet"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/adopt_pet" />
                <TextView
                    android:layout_gravity="center"
                    android:textColor="#1d1c1c"
                    android:textStyle="bold"
                    android:text="ADOPT A PET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_buy_pet"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/buy_pet" />
                <TextView
                    android:layout_gravity="center"
                    android:textColor="#1d1c1c"
                    android:textStyle="bold"
                    android:text="BUY PET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_old_age_home"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/pet_old_age_home" />
                <TextView
                    android:layout_gravity="center"
                    android:textColor="#1d1c1c"
                    android:textStyle="bold"
                    android:text="PET OLD AGE HOME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:translationZ="16dp"
        android:elevation="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>
</RelativeLayout>