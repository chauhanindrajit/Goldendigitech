<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:elevation="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/profile_image"
                    android:transitionName="diagnostic_image"
                    android:padding="2dp"
                    android:src="@drawable/pathology_labs"
                    android:background="@drawable/categeory_shpe"
                    android:layout_width="100dp"
                    android:layout_height="90dp" />
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:minLines="1"
                        android:maxLines="1"
                        android:textSize="20dp"
                        android:id="@+id/diagnosticsname"
                        android:textStyle="bold"
                        android:text="Aspira Diagnostics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_place_blue_24dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp" />
                        <TextView
                            android:id="@+id/services"
                            android:layout_marginLeft="5dp"
                            android:textSize="12dp"
                            android:text="shop no23,charkop,kandvialicwes charkop kandivali west"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

