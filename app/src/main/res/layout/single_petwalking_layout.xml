<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:clipToPadding="false"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:translationZ="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/profile_image"
                    android:transitionName="diagnostic_image"
                    android:padding="2dp"
                    android:src="@drawable/petoldage_home"
                    android:background="@drawable/categeory_shpe"
                    android:layout_width="100dp"
                    android:layout_height="90dp" />
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/wname"
                        android:minLines="1"
                        android:maxLines="1"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="Tailspin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <hyogeun.github.com.colorratingbarlib.ColorRatingBar
                            android:id="@+id/MyRating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="3.5"
                            app:changeable="false"
                            app:empty_color="#fd080808"
                            app:progress_color="#e79a4c" />
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:text="(15)"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_place_blue_24dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp" />
                        <TextView
                            android:id="@+id/wloctn"
                            android:layout_marginLeft="5dp"
                            android:minLines="1"
                            android:maxLines="1"
                            android:textSize="12dp"
                            android:text="Location: Andheri"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/rupee_icon_blue"
                            android:layout_width="15dp"
                            android:layout_height="15dp" />
                        <TextView
                            android:id="@+id/wfee"
                            android:layout_marginLeft="5dp"
                            android:minLines="1"
                            android:maxLines="1"
                            android:textSize="12dp"
                            android:text="6months - Rs 4000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_access_time_blue_24dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp" />
                        <TextView
                            android:id="@+id/wavailble"
                            android:layout_marginLeft="5dp"
                            android:minLines="1"
                            android:maxLines="1"
                            android:textSize="12dp"
                            android:text="Available"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>




                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>